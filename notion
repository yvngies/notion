if (hrs < 12)
        greet = 'Good Morning Lina';
    else if (hrs >= 12 && hrs <= 17)
        greet = 'Good Afternoon Lina';
    else if (hrs >= 17 && hrs <= 24)
        greet = 'Good Evening  Lina';
